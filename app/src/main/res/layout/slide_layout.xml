<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/asd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        app:srcCompat="@drawable/eat" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/hel_n_bold"
        android:gravity="center"
        android:lineSpacingExtra="8sp"
        android:paddingTop="10dp"
        android:text="HeadShit"
        android:textColor="@color/Slide_yellow"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_desrp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slide_heading"
        android:layout_centerHorizontal="true"

        android:fontFamily="@font/pt_sans_blod"
        android:lineSpacingExtra="2sp"
        android:paddingLeft="70dp"
        android:paddingRight="65dp"
        android:paddingTop="20dp"
        android:shadowColor="@color/primary_text1"
        android:text="To use the swipe to refresh widget ensure you have a dependency to the support library in your application Gradle build file. Even if you provide the swipe-to-refresh design pattern, you should still add a refresh button to your overflow menu in your toolbar to support the refresh for users unable to swipe."
        android:textSize="18sp" />
</RelativeLayout>